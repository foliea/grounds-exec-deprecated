<%= form_for(Ground.new, url: grounds_share_path(@ground), remote: true) do |f| %>
    <%= f.hidden_field :language, value: @ground.language %>
    <%= f.hidden_field :code, value: @ground.code %>
<% end %>

<div class="row top-buffer fullwidth ground-editor-header">

  <div class="large-12 column">

    <%= render 'option_dropdown', option: :language %>

    <%= render 'option_dropdown', option: :theme %>

    <%= render 'option_dropdown', option: :indent %>

    <%= button_tag(type: 'button', id: :run, class: 'tiny ground-button radius') do
      content_tag(:strong, fa_icon('play', text: t('editor.run')))
    end %>

    <%= button_tag(type: 'button', id: :share, class: 'tiny ground-button radius') do
      content_tag(:strong, fa_icon('share', text: t('editor.share')))
    end %>

  </div>

</div>

<%= content_tag(:div, @ground.code, id: :ground_editor, class: 'row fullwidth ground-editor', data: @ground.editor) %>

<div class="row fullwidth top-buffer">

  <input type="text" id="sharedURL">

</div>

<div class="row fullwidth ground-panel">

  <div class="large-12 column">

    <h6><%= fa_icon('terminal', text: t('editor.console')) %></h6>

    <pre id="waiting" hidden="true"><%= t('editor.waiting') %></pre>

    <pre id="error" class="stderr" hidden="true"><%= t('editor.error') %></pre>

    <pre id="console"></pre>

  </div>

</div>

<div class="row fullwidth top-buffer">

  <%= button_tag(type: 'button', id: :back, class: 'tiny ground-button radius') do
    content_tag(:strong, fa_icon('long-arrow-up', text: t('editor.back')))
  end %>

</div>
