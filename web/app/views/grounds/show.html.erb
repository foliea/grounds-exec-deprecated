<div class="row top-buffer ground-editor-header">

  <div class="large-3 column">
    <%= render 'options_dropdown', option: 'language', options: 'languages' %>
  </div>

  <div class="large-3 column">
    <%= render 'options_dropdown', option: 'theme', options: 'themes' %>
  </div>

  <div class="large-3 column">
    <%= render 'options_dropdown', option: 'indent', options: 'indents' %>
  </div>
  <div class="large-3 column"></div>       
</div>

<%= content_tag(:div, @ground.code, id: :ground_editor, class: 'row ground-editor', data: @ground.editor) %>

<div class="row top-buffer">
<%= button_tag(type: 'button', id: :run, class: 'small ground-button radius') do
  content_tag(:strong, t('editor.run'))
end %>
</div>

<div class="row ground-panel">

  <h6><%= t('editor.console') %></h6>
  <ul id="console"></ul>

</div>

